<%= stylesheet_link_tag('blog_index')%>
<div class="nav">
  <h1>Blogs</h1>
  <h4><%= link_to "Write Your Blog", blog_new_path%></h4>
</div>
<div class="row">
  <% @blog.each do |blog|%>
    <div class="col-4">
      <div class="row">
        <% if blog.image.attached? %>
          <img src=<%=(url_for(blog.image))%>>
        <% end %>
      </div>
      <div class="text">
        <a class="row title" href="/blog/<%= blog.id %>">
          <h3><%= blog.title %></h3>
        </a>
        <div class="row">
          <p class="article"><%= blog.article %></p>
        </div>
        <div class="row">
          <p class="col-6"><%= blog.published_year %></p>
          <p class="col-6 rating"><%= blog.rating %></p>
        </div>
      </div>
    </div>
  <%end%>
</div>
