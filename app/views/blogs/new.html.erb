<h1>Create Yuor Own Post</h1>

<%= form_with model: @blog, url: blog_create_path, multipart: true  do |form| %>
    <div class="mb-3">
        <%= form.label :title%>
        <%= form.text_field :title, class: "form-control", placeholder: "Title"%>
    </div>
    <div class="mb-3">
        <%= form.label :article%>
        <%= form.text_field :article, class: "form-control", placeholder: "Write about...."%>
    </div>
    <div class="mb-3">
        <%= form.label :author%>
        <%= form.text_field :author, class: "form-control", placeholder: "User"%>
    </div>
    <div class="mb-3">
        <%= form.label :image%>
        <%= form.file_field :image, class: "form-control", placeholder: "User"%>
    </div>
    <div class="mb-3">
        <%= form.label :published_year%>
        <%= form.number_field :published_year, class: "form-control", placeholder: "Published Year"%>
    </div>
    <div class="mb-3">
        <%= form.label :rating%>
        <%= form.number_field :rating, class: "form-control", placeholder: "Scale Rate"%>
    </div>

    <div class="mb-3">
        <%= form.submit "ADD", class: "btn btn-primary"%>
    </div>
<%end%>